  {

    // --------------------- Workspace -------------------

    "workspace.workspaceFolderCheckCwd": false,

    // ----------------------------------------------------

    // -------------------- Coc nvim ------------------------

    "languageserver": { },
    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnType": true,
    "coc.preferences.floatActions": true,
    "coc.preferences.useQuickfixForLocations": true,

    // ------------------------------------------------------

    // ------------------- Coc json -------------------------

    "json.enable": true,
    "json.validate.enable": true,
    "json.format.enable": true,
    "json.format.keepLines": true,

    // ------------------------------------------------------

    // -------------------- Coc explorer ---------------------

    "explorer.width": 30,
    "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
    "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
    "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
    "explorer.file.showHiddenFiles": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.git.enable": true,
    "explorer.diagnostic.displayMax": 99,
    "explorer.diagnostic.enableSubscriptNumber": true,
    "explorer.debug": true,
    "explorer.keyMappings.global": {
      "<cr>": [ "wait", "expanded?", "collapse", "expand" ],
      "<c-s>": "select",
      "<c-u>": "unselect",
      "<c-f>": "expand:compact|uncompact"
    },

    // ---------------------------------------------------------

    // ------------------ Coc snippets -------------------

    "snippets.extends": {
      "js": [ "javascript" ],
      "jsx": [ "javascriptreact" ],
      "ts": [ "typescript" ],
      "tsx": [ "typescriptreact" ],
      "json": [ "json" ]
    },

    // ---------------------------------------------------

    // -------------------- Coc tsserver -----------------

    "tsserver.enable": true,
    "tsserver.log": "verbose",
    "typescript.suggest.enabled": true,

    // ---------------------------------------------------

    // ------------------------ Code Spell Checker -----------------------------------------------

    // Enable cSpell to use the chosen dictionary
    "cSpellExt.enableDictionaries": [ "portuguese-brazilian" ],

    // The Language local to use when spell checking. "en" and "en-GB" are currently supported.
    "cSpell.language": "en,pt,pt_BR",

    // Enable / Disable the spell checker.
    "cSpell.enabled": true,

    // Display the spell checker status on the status bar.
    "cSpell.showStatus": true,

    // Controls the maximum number of spelling errors per document.
    "cSpell.maxNumberOfProblems": 100,

    // Controls the number of suggestions shown.
    "cSpell.numSuggestions": 8,

    // The minimum length of a word before checking it against a dictionary.
    "cSpell.minWordLength": 4,

    // -------------------------------------------------------------------------------------------


    // -------------------- Coc ESLint ----------------

    "eslint.autoFixOnSave": true,

    // ------------------------------------------------

    // -------------------- Coc yaml ------------------

    "yaml.enable": true,
    "yaml.completion": true,
    "yaml.format.enable": true,
    "yaml.validate": true,
    "yaml.format.singleQuote": true,
    "yaml.format.bracketSpacing": true,
    "yaml.trace.server": "verbose",
    "cSpell.userWords": [
      "dtos",
      "nestjs",
      "postgresql"
    ],

    // ------------------------------------------------

    // ------------------ Coc markdown preview enhanced ---------------

    "markdown-preview-enhanced.previewTheme": "one-dark.css"

    // ----------------------------------------------------------------

  }
  
